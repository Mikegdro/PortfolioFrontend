<script>


    document.addEventListener('astro:page-load', () => {
        welcomeAnimation()
    })

    function welcomeAnimation() {
        gsap.to('.bar', 1.25, {
            delay: 0,
            height: 0,
            stagger: {
                amount: 0.5
            },
            ease: 'power4.inOut'
        })

        setTimeout(() => {
            document.querySelector('#main-content')?.classList.remove('hidden')
        }, 1.25)

        setTimeout(() => {
            document.querySelector('.preloader')?.classList.add('hidden')
        }, 1500)
    }

</script>

<script is:inline defer src="https://cdn.jsdelivr.net/npm/gsap@3.12/dist/gsap.min.js"></script>

<style is:inline>

    .preloader {
        position: absolute;

        width: 100%;
        height: 100%;

        z-index: 100;

        overflow-y: hidden !important;
    }

    .overlay {
        position: fixed;

        width: 100vw;
        height: 100dvh;

        z-index: 2;
        display: flex;

        overflow-y: hidden !important; 
    }

    .bar {
		width: 10vw;
		height: 100dvh;
		background: rgb(48, 48, 48);

        z-index: 10;

        overflow-y: hidden !important;
	}

    .counter {
        position: fixed;
        
        width: 100%;
        height: 100%;

        display: flex;
        justify-content: flex-end;
        align-items: flex-end;

        z-index: 1000;

        overflow-y: hidden !important;
    }

    

</style>