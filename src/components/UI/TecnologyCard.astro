---
import type { Tecnologies } from '../../types'

import X from '../../icons/X.astro'


interface Props {
    data: Tecnologies
}

const { data } = Astro.props

---

<article class="card shadow-xl hover personal-card scroll-animation right-animation child-animation">
    <div class="card-body">
        <a class="btn btn-ghost dark:btn-outline outline-primary outline-dashed border-0 hover:bg-primary hover:outline-double min-h-20" href={data.site}>
            <img src={data.logo} class="object-contain h-full"/>
        </a>
        <h1>{data.name}</h1>
        <p>{data.description?.slice(0, 150)}</p>
        <div class="card-actions justify-end items-center">
            <X link={data.twitter || ""} />
        </div>
    </div>
</article>