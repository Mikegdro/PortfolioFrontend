---
import type { Experience } from '../../types'

import { getDayAndMonth } from '../../utils'
import ExperienceModal from './ExperienceModal.astro'

interface Props {
  data: Experience
}

const { data } = Astro.props

const startDate: Array<string> = getDayAndMonth(data.startDate!)
const endDate: Array<string> = getDayAndMonth(data.endDate!)
---

<article class="flex justify-between p-7 rounded-xl hover shadow-lg personal-card">
    <ExperienceModal data={data} />
    <div class="flex flex-col">
        <h1 class="capitalize text-xl">{data.role}</h1>
        <p class="text-stone-400">{startDate[0]} {startDate[1]} - {endDate[0]} {endDate[1]}</p>
    </div>
    <div>
        <button class="button" onclick="Modal.showModal()">
            See more
        </button>
    </div>
</article>