---
import type { Experience } from "../../types";

import PrivateProject from "./PrivateProject.astro";

interface Props {
    data: Experience;
}

const { data } = Astro.props;

---

<dialog id="Modal" class="modal">
    <div class="modal-box">
        <h3 class="text-xl font-bold capitalize">{data.role}</h3>
        <p class="text-stone-500">{ data.description }</p>
        <div class="divider"></div>
        <div id="experience-projects">
            <h1 class="text-xl">Projects</h1>
            { data.PrivateProject.map(item => {
                return <PrivateProject data={item} />
            })}
        </div>
        <div class="modal-action">
            <form method="dialog">
                <!-- if there is a button in form, it will close the modal -->
                <button class="btn">Close</button>
            </form>
        </div>
    </div>
</dialog>
